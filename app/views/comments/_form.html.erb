<%= form_with model: [@post, @comment] do |f| %>
  <%= render 'shared/error_messages', object: @comment %>
  <div class="field">
    <%= f.label :body, 'コメント', class: "block text-left font-medium text-gray-700" %>
    <%= f.text_area :body, id: :comment_content, class: "mt-1 block w-full text-lg rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border-gray-300", rows: 2 %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "コメントを投稿", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>