<div class="flex flex-col space-y-2 p-1">
  <div class="flex items-start space-x-2 <%= comment.own?(current_user) ? 'flex-row-reverse' : '' %>">
    <div class="flex flex-col space-y-1 <%= comment_text_alignment(comment, current_user) %>">
      <p class="text-sm text-gray-500"><%= comment.user.name %></p>
      <p class="text-xs text-gray-400"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></p>
      <div class="flex items-center">
        <div class="<%= comment_background_color(comment, current_user) %> rounded-xl p-2 mr-2">
          <p class="text-sm"><%= comment.body %></p>
        </div>
        <div>
          <% if comment.own?(current_user) %>
            <%= link_to post_comment_path(comment.post, comment), data: { turbo_method: :delete, turbo_confirm: 'コメントを削除しますか？' } do %>
            <i class="fa-regular fa-trash-can text-gray-400"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
