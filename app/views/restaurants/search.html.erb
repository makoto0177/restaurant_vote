<div class="flex justify-center items-center py-12 px-4">
  <div class="container px-5 py-4 lg:py-24 mx-auto min-h-screen">
    <div class="flex flex-col text-center w-full mb-12">
      <div class="g:w-1/2 md:w-2/3 mx-auto">
        <h1 class="my-14 text-center text-3xl font-bold tracking-tight text-gray-900"><%= t '.title' %></h1>    
        <%= form_with url: new_post_path, method: :get , local: true do |f| %>
          <div class="form-control mb-10">
            <%= f.label :address, (t '.address'), class: 'label' %>
            <%= f.search_field :address, class: 'input input-bordered', value: params[:address], required: true, placeholder: '市町村名など' %>
          </div>
          <div class="form-control mb-10">
            <%= f.label :keyword, (t '.search_word'), class: 'label' %>
            <%= f.search_field :keyword, class: 'input input-bordered', value: params[:keyword], placeholder: '和食、洋食など' %>
          </div>
          <%= f.submit (t 'defaults.search'), class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </div>
</div>