<div class="container px-5 py-24 mx-auto">
  <div class="flex flex-col text-center w-full mb-12">
    <div class="g:w-1/2 md:w-2/3 mx-auto">
      <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Signup</h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-control mb-10">
          <%= f.label :name, class: 'label' %>
          <%= f.text_field :name, class: 'input input-primary' %>
        </div>
        <div class="form-control mb-10">
            <%= f.label :email, class: 'label' %>
            <%= f.email_field :email, class: 'input input-primary' %>
        </div>
        <div class="form-control mb-10">
            <%= f.label :password, class: 'label' %>
            <%= f.password_field :password, class: 'input input-primary' %>
        </div>
        <div class="form-control mb-10">
            <%= f.label :password_confirmation, class: 'label' %>
            <%= f.password_field :password_confirmation, class: 'input input-primary' %>
        </div>
        <div class="flex justify-between items-center">
          <%= f.submit 'signup', class: 'btn btn-primary' %>
          <%= link_to "Login", login_path, class: 'inline-block mx-30' %>
        </div>
      <% end %>
    </div>
  </div>
</div>