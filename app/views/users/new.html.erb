<div class="flex justify-center items-center py-12 px-4">
  <div class="lg:w-1/2 md:w-2/3 min-h-screen">
    <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900"><%= t '.title' %></h1>
    <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <div class="form-control mb-10">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, class: 'input input-bordered' %>
      </div>
      <div class="form-control mb-10">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, class: 'input input-bordered' %>
      </div>
      <div class="form-control mb-10">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, class: 'input input-bordered' %>
      </div>
      <div class="form-control mb-10">
          <%= f.label :password_confirmation, class: 'label' %>
          <%= f.password_field :password_confirmation, class: 'input input-bordered' %>
      </div>
      <div class="flex justify-between items-center">
        <%= f.submit (t 'defaults.register'), class: 'btn btn-primary' %>
        <%= link_to (t '.login_page'), login_path, class: 'inline-block mx-30' %>
      </div>
    <% end %>
  </div>
</div>