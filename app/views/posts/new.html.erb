<div class="w-full max-w-md space-y-8">
  <h1 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Posts.new</h1>
  <%= form_with model: @post, local: true do |f| %>
    <div class="form-control mb-10">
      <%= f.label :title, class: 'label' %>
      <%= f.text_field :title, class: 'input input-primary' %>
    </div>
    <div class="form-control mb-10">
      <%= f.check_box :restaurants %>
      <%= f.label :restaurants %>
    </div>
    <%= f.submit 'create', class: 'btn btn-primary' %>
    <% end %>
</div>