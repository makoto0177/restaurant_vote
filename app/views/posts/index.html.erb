<div class="items-center py-12 px-4 min-h-screen">
  <h1 class="mb-14 text-center text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= t '.title' %></h1>
  <%= search_form_for @q, html: { class: "bg-white shadow-md rounded px-6 pt-4 pb-2 mb-4 flex items-center" } do |f| %>
  <div class="flex-grow mb-4">
    <%= f.label :title_cont, "タイトル検索", class: "block text-gray-700 font-bold mb-2" %>
    <%= f.search_field :title_cont, class: "shadow appearance-none border rounded w-full mr-2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <%= f.submit "検索", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>

  <% if @posts.present? %>
    <div class="flex flex-wrap">
      <%= render @posts %>
    </div>
  <% else %>
    <div class="text-center">
      <p class="text-2xl sm:text-3xl"><%= t '.no_result' %></p>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>