<div class="w-1/3 ">
  <div class="card w-80 h-101 bg-base-100 mx-auto my-6">
    <div class="card-body items-center text-center">
        <h2 class="card-title my-4 text-xl"><%= post.title %></h2>
        <figure><%= image_tag 'undraw_voting_nvu7.png' %></figure>
          <% if logged_in? && current_user.own?(post) %>
          <%= link_to (t 'posts.index.vote_delete'), post_path(post), data: { turbo_method: :delete, turbo_confirm: (t 'posts.index.vote_delete_confirm') }, class: 'btn btn-sm' %>
          <% end %>
        <div class="card-actions flex">
        <%= link_to (t 'posts.index.voting_page'), vote_post_path(post), class: 'btn btn-sm bg-red-700 border-red-700' %>
        <%= link_to (t 'posts.index.vote_result_page'), post_path(post), class: 'btn btn-sm bg-red-700 border-red-700' %>
      </div>
    </div>
  </div>
</div>