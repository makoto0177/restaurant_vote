<div class="p-4 w-full lg:w-1/3">
  <div class="card w-full h-101 bg-base-100 mx-auto my-6">
    <div class="card-body items-center text-center">
      <h2 class="card-title my-4 text-xl"><%= post.title %></h2>
      <figure><%= image_tag 'undraw_voting_nvu7.png' %></figure>
      <div class="flex justify-center">
        <%= link_to (t 'posts.index.voting_page'), vote_post_path(post), class: 'btn btn-xs lg:btn-sm bg-red-700 border-red-700 mx-1' %>
        <%= link_to (t 'posts.index.vote_result_page'), post_path(post), class: 'btn btn-xs lg:btn-sm bg-red-700 border-red-700 mx-1' %>
        <% if logged_in? && current_user.own?(post) %>
          <%= link_to post_path(post), data: { turbo_method: :delete, turbo_confirm: (t 'posts.index.vote_delete_confirm') } do %>
            <i class="fa-regular fa-trash-can lg:text-xl lg:pt-2"></i>
          <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
